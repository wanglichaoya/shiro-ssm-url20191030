<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.wlc.shiroSSM.mapper.UserMapper">
	    <select id="getByName"  parameterType="string" resultType="com.wlc.shiroSSM.pojo.User">
	        select * from user where name = #{0}
	    </select>

	<insert id="createUser" parameterType="com.wlc.shiroSSM.pojo.User">
		insert into user values(null,#{name},#{password},#{salt})
	</insert>

	<select id="getUser" parameterType="string" resultType="User">
		select * from user where name=#{name}
	</select>
	</mapper>

